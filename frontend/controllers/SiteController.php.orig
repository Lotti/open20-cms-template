    /**
     * Logs out the current user.
     * @return Response
     */
    public function actionLogout($redir = null)
    {
        Yii::$app->user->logout();
        $referrer = \Yii::$app->request->referrer;
        if($redir){
            return $this->redirect($redir);
        }
        return $this->redirect($referrer ? $referrer : \Yii::$app->params['platform']['frontendUrl']);

    }
    
    /**
